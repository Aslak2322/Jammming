function generateRandomNumber () {
    return Math.floor(Math.random()*4)
}
function generateVerb(input) {
    if (input === 1) {return 'marry'}
    if (input === 2) {return 'kill'}
    if (input === 3) {return 'fuck'}
    else {return 'just cry'}
}
function generateFirstVerb(number) {
    if (number === 1) {return 'I'}
    if (number === 2) {return 'You'}
    if (number === 3) {return 'We'}
    else {return 'They'}
}




console.log(generateVerb(generateRandomNumber()))
console.log(generateFirstVerb(generateRandomNumber()))
function generateSentence(verb, firstVerb) {
    return ` ${firstVerb} have hereby decided that i will ${verb} you`
}
console.log(generateSentence(generateVerb(generateRandomNumber()), generateFirstVerb(generateRandomNumber())))
